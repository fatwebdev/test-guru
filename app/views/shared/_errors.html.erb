<% if entity&.errors.present? %>
  <div class="alert alert-danger" role="alert" data-error-entity-id="<%= entity.id %>">
    <h4 class="alert-heading">
      <%= t('.header', count: entity.errors.count) %>
    </h4>
    <hr>
    <ul>
      <% entity.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>